{
    "$schema": "http://json-schema.org/schema",
    "cli": "nx",
    "$id": "project-boilerplate",
    "type": "object",
    "properties": {
        "project": {
            "type": "string",
            "description": "The name of the project to implement this on",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "What is the name of your project"
        }
    },
    "required": ["project"]
}
